<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />
    <Button
        android:id="@+id/buttonRouting"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#55000000"
        android:text="Start Routing"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonMe"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="#55000000"
        android:text="I'm"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonRouting"
        android:layout_toEndOf="@+id/buttonRouting" />

    <Button
        android:id="@+id/buttonBuddy"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="#55000000"
        android:text="You are"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_alignTop="@+id/buttonRouting"
        android:layout_toLeftOf="@+id/buttonRouting"
        android:layout_toStartOf="@+id/buttonRouting" />

</RelativeLayout>