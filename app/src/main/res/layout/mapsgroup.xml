<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/mapG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />
    <Button
        android:id="@+id/buttonRoutingG"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#55000000"
        android:text="Start Routing"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time :: "
        android:id="@+id/textViewTime"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:background="#55000000"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/buttonBuddy"
        android:layout_alignStart="@+id/buttonBuddy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTimeUse"
        android:background="#55000000"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/textViewTime"
        android:layout_toRightOf="@+id/textViewTime"
        android:layout_toEndOf="@+id/textViewTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance :: "
        android:background="#55000000"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:id="@+id/textViewDistance"
        android:layout_below="@+id/textViewTime"
        android:layout_alignLeft="@+id/textViewTime"
        android:layout_alignStart="@+id/textViewTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDistanceUse"
        android:background="#55000000"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_below="@+id/textViewTimeUse"
        android:layout_toRightOf="@+id/textViewDistance"
        android:layout_toEndOf="@+id/textViewDistance" />

</RelativeLayout>